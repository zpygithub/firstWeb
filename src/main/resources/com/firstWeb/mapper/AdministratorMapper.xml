<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//com.map.mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.firstWeb.mapper.AdministratorMapper">
    <resultMap id="administratorMap" type="com.firstWeb.bean.model.Administrator">
        <result property="id" column="id"/>
        <result property="account" column="account"/>
        <result property="nickname" column="nickname"/>
        <result property="password" column="password"/>
        <result property="telephone" column="telephone"/>
        <result property="email" column="email"/>
        <result property="status" column="status"/>
        <result property="salt" column="salt"/>
    </resultMap>

    <select id="getAdministrator" parameterType="long" resultMap="administratorMap">
        SELECT * FROM tb_administrator WHERE id=#{id} AND status != -1
    </select>

    <select id="getAdministratorByAccount" parameterType="String" resultMap="administratorMap">
        SELECT * FROM tb_administrator WHERE account=#{account}
    </select>

</mapper>
